<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="my_persistence_unit" transaction-type="JTA">
    <jta-data-source>java:app/jdbc:derby://localhost:1527/POOS [poos on POOS]</jta-data-source>
    <class>com.park.parkinglot.entity.Bon</class>
    <class>com.park.parkinglot.entity.Car</class>
    <class>com.park.parkinglot.entity.Produs</class>
    <class>com.park.parkinglot.entity.User</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/POOS [poos on POOS]"/>
      <property name="javax.persistence.jdbc.user" value="poos"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="poos"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
